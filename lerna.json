{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "version": {
      "message": "chore(release): publish %s"
    },
    "publish": {
      "npmClient": "npm",
      "verifyAccess": false,
      "ignoreChanges": ["*.md", "**/test/**"]
    }
  }
}
