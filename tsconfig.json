{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "baseUrl": "./packages",
    "paths": {
      "@fluent-ui/core": ["./fluent-ui/src"],
      "@fluent-ui/core/*": ["./fluent-ui/src/*"]
    }
  },
  "exclude": [
    "**/build/",
    "node_modules",
    "dist",
    "build",
    "public",
    "**/__tests__/"
  ]
}
