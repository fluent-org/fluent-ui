{
  "name": "@fluent-ui/core",
  "version": "0.0.1",
  "description": "React components that implement Microsoft's Fluent Design System.",
  "author": "chenyueban <chenyueban@qq.com>",
  "keywords": [
    "react",
    "fluent-design",
    "fluent-ui"
  ],
  "main": "build/umd/index.js",
  "module": "build/es/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chenyueban/fluent-ui",
    "directory": "packages/fluent-ui"
  },
  "homepage": "https://fluent-ui.com/",
  "bugs": {
    "url": "https://github.com/chenyueban/fluent-ui/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf build",
    "build": "cross-env rollup -c rollup.config.js",
    "start": "rollup -c rollup.config.js -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "codecov": "codecov"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.0",
    "codecov": "^3.5.0",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "jest-config": "^23.6.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.18.0",
    "ts-jest": "^23.10.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
