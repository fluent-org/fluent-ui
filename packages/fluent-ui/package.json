{
  "name": "@fluent-ui/core",
  "private": true,
  "version": "0.0.1",
  "description": "React components that implement Microsoft's Fluent Design System.",
  "author": "chenyueban <chenyueban@qq.com>",
  "keywords": [
    "react",
    "fluent-design",
    "fluent-ui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chenyueban/fluent-ui",
    "directory": "packages/fluent-ui"
  },
  "homepage": "https://fluent-ui.com/",
  "bugs": {
    "url": "https://github.com/chenyueban/fluent-ui/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "prebuild": "rimraf build",
    "build": "yarn build:cjs && yarn build:es && yarn build:umd && yarn build:copy-files",
    "build:cjs": "cross-env NODE_ENV=production tsc --module CommonJS --outDir ./build",
    "build:es": "cross-env NODE_ENV=production tsc --module ES6 --outDir ./build/es",
    "build:umd": "cross-env NODE_ENV=production tsc --module UMD --outDir ./build/umd",
    "build:copy-files": "ts-node ../../scripts/copy-files.ts",
    "start": "cross-env NODE_ENV=production tsc -w --module CommonJS --outDir ./build",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "yarn test -- --no-cache",
    "codecov": "codecov"
  },
  "peerDependencies": {
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0",
    "styled-components": ">= 4.X"
  },
  "dependencies": {
    "@fluent-ui/icons": "^0.0.1",
    "@xstyled/system": "^1.7.0"
  },
  "devDependencies": {
    "@types/node": "^10.11.0",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/styled-components": "4.1.8",
    "cross-env": "^5.2.0",
    "csstype": "^2.6.5",
    "rimraf": "^2.6.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "main": "build/index.js",
  "module": "build/es/index.js",
  "typings": "build/index.d.ts"
}
