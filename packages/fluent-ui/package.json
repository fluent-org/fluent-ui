{
  "name": "@fluent-ui/core",
  "private": false,
  "version": "0.14.0",
  "description": "React components that inspired by Microsoft's Fluent Design System.",
  "author": "chenyueban <jasonchan0527@gmail.com>",
  "keywords": [
    "react",
    "fluent-design",
    "fluent-ui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chenyueban/fluent-ui",
    "directory": "packages/fluent-ui"
  },
  "homepage": "https://fluent-ui.com/",
  "bugs": {
    "url": "https://github.com/chenyueban/fluent-ui/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "prebuild": "cross-env NODE_ENV=production rimraf build",
    "build": "yarn build:cjs && yarn build:es && yarn build:umd && yarn build:copy-files",
    "build:cjs": "cross-env NODE_ENV=production tsc --module CommonJS --outDir ./build",
    "build:es": "cross-env NODE_ENV=production tsc --module ES6 --outDir ./build/es",
    "build:umd": "cross-env NODE_ENV=production tsc --module UMD --outDir ./build/umd",
    "build:copy-files": "ts-node ../../scripts/copy-files.ts",
    "start": "cross-env NODE_ENV=production tsc -w --module ES6 --outDir ./build/es",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --coverage --watch",
    "test:prod": "cross-env NODE_ENV=test jest --ci --coverage --runInBand --detectOpenHandles --forceExit && yarn codecov",
    "codecov": "cross-env NODE_ENV=test codecov"
  },
  "peerDependencies": {
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0",
    "styled-components": ">= 4.X"
  },
  "dependencies": {
    "@fluent-ui/hooks": "^0.8.0",
    "@fluent-ui/icons": "^0.4.0",
    "@xstyled/prop-types": "^1.3.0",
    "@xstyled/system": "^1.7.0",
    "react-transition-group": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^10.11.0",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-transition-group": "^2.9.2",
    "@types/styled-components": "4.1.8",
    "csstype": "^2.6.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "build/index.js",
  "module": "build/es/index.js",
  "typings": "build/index.d.ts"
}
