{
  "name": "@fluent-ui/hooks",
  "private": true,
  "version": "0.0.1",
  "description": "Fluent Design System React hooks.",
  "author": "chenyueban <chenyueban@qq.com>",
  "keywords": [
    "react",
    "fluent-design",
    "fluent-ui",
    "hooks",
    "react hooks"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chenyueban/fluent-ui",
    "directory": "packages/fluent-ui"
  },
  "homepage": "https://fluent-ui.com/",
  "bugs": {
    "url": "https://github.com/chenyueban/fluent-ui/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "prebuild": "rimraf build",
    "build": "yarn build:cjs && yarn build:es && yarn build:umd && yarn build:copy-files",
    "build:cjs": "cross-env NODE_ENV=production tsc --module CommonJS --outDir ./build",
    "build:es": "cross-env NODE_ENV=production tsc --module ES6 --outDir ./build/es",
    "build:umd": "cross-env NODE_ENV=production tsc --module UMD --outDir ./build/umd",
    "build:copy-files": "ts-node ../../scripts/copy-files.ts",
    "start": "cross-env NODE_ENV=production tsc -w --module CommonJS --outDir ./build"
  },
  "peerDependencies": {
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0"
  },
  "main": "build/index.js",
  "module": "build/es/index.js",
  "typings": "build/index.d.ts"
}
